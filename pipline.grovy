pipeline {
    agent any

    stages {
        stage('Hello World') {
            steps {
                script {
                    echo 'Hello, World'
                }
            }
        }

        // New stage to run the hello.py file
        stage('Run hello.py') {
            steps {
                script {
                    // Running the hello.py file
                    sh 'python3 hello.py'
                }
            }
        }
    }
}
